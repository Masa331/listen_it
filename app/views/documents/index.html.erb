<div class="row">
  <div class="col-sm-12 search-bar">
    <form>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search by file name, type, etc..">
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <tbody>
        <% @documents.each do |document| %>
          <tr>
            <th>
              <%= document.title %>
            </th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  var node = document.getElementById('document-index-elm-container');
  var app = Elm.DocumentIndex.embed(node)
</script>
